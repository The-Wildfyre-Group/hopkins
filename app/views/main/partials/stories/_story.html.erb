<% Post.all.each do |post| %>
<div class="story border-top relative">
	<div class="overlay"></div>
	<div style="background: url(img/stock/h-1.jpg); background-size: cover;">
		<div class="row">
			<div class="col-lg-7 col-md-10 col-sm-10">
				<h5 class="section-label no-margin">
					<%= post.title %>
				</h5>
				<div class="caption">
					<h4><%= post.snippet %></h4>
					<p class="lead"><%= post.description %></p>
					<p><a class="btn btn-transparent visible-sm-* visible-xs-*">View Story</a></p>
				</div>
			</div>
			<div class="col-lg-offset-1  col-lg-4 hidden-xs hidden-sm" style="margin-top: 15%;">
				<img src="http://www.maxapartments.co.za/wp-content/uploads/2016/02/arrow-right.png" class="pull-right story-arrow">
                <!-- <img src="http://www.maxapartments.co.za/wp-content/uploads/2016/02/arrow-right.png" class="pull-right story-arrow"> -->
                <!-- <img src="http://www.maxapartments.co.za/wp-content/uploads/2016/02/arrow-right.png" class="pull-right story-arrow"> -->
			</div>
		</div>
	</div>
</div>
<% end %>

