<div id="share-preview" >
  <div class="center">
    <%= form_for Share.new, remote: true, html: {id: 'contact-form', name: "contact-form", multipart: true, style: "background-image: url(#{image_url('rise-layout.png')}); background-size: cover; border-radius: 4px; background-color: rgba(0,0,0, .05); box-shadow: 1px 1px 1px #333; border-top: 1px solid #444; border: 1px solid #444; "} do |f| %>
      <div class="center">
        <%= f.file_field :photo, class: "form-control" %>
      </div>
      <br/><br/>
      <h4 class="text-center text-white">TELL US WHO YOU RISE FOR:</h4>
      <div class="form-group">
        <%= f.text_field :message, class: "form form-control", placeholder: "Enter Name", onfocus: "this.placeholder=''", onblur: "this.placeholder='Enter Name'", 'data-name' => "Name" ,required: true, style: "font-size: 30px; color: #fff; border-bottom: 1p solid #fff; background: transparent; text-align: center; line-height: 30px;" %>
      </div>
      <div class="clearfix"></div>
      <br/>
      <br/>
      <br/>
      <br/>
    
  </div>
  <%= f.submit :class => "btn btn-transparent btn-lg bg-primary"%>
</div>

  <% end %>